{
  "manifest_version": 3,
  "name": "Web History Monitor",
  "version": "1.0.0",
  "description": "Monitor and record your web browsing activity including URLs, visit times, and IP addresses with easy export. 监控用户浏览记录、时间和IP地址",

  "permissions": [
    "tabs",
    "storage",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
     
      "128": "icon128.png"
    }
  },
  "icons": {
   
    "128": "icon128.png"
  }
}
